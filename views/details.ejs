<%- include('./header.ejs') %>


    <section class="blog-detail mtb-40">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <div class="blog-left">
                        <h1>
                            <%= d.title %>
                        </h1>
                        <div class="posted-on">

                        </div>
                        <div class="detail-img">
                            <img src="<%= d.image.url %>" height="426" width="640" alt="blog1" />
                        </div>
                        <div class="blog-desc">
                            <p>
                                <%= d.description %>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="blog-right">
                        <div class="right-widget recent-post">
                            <h3>Recent Blogs</h3>
                            <% r.forEach((item)=> { %>

                                <a href="/detail/<%= item._id %>">
                                    <div class="rb-box">
                                        <div class="rb-box-img">
                                            <img src="<%= item.image.url %> " height="67px" width="100px" alt="">
                                        </div>
                                        <div class="rb-box-desc">
                                            <h4>
                                                <%= item.title %>
                                            </h4>
                                        </div>
                                    </div>
                                </a>

                                <% }) %>
                        </div>


                        <div class="right-widget categories">
                            <h3>Categories</h3>
                            <ul>
                                <% c.forEach((item)=> { %>
                                    <li><a href="">
                                            <%= item.title %>
                                        </a></li>
                                    <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>




    <%- include('./footer.ejs') %>